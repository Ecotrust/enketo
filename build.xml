<?xml version="1.0"?>
<project basedir="" default="compile">

  <taskdef name="jscomp" classname="com.google.javascript.jscomp.ant.CompileTask"
           classpath="lib/closure/compiler.jar"/>

 <!-- <taskdef name="jsdoctoolkit" classname="uk.co.darrenhurley.ant.tasks.JsDocToolkit" classpath="/lib/jsdoctoolkit/jsdoc-toolkit-ant.jar;/path/to/js.jar"/>-->

  <target name="compile">
    
    <jscomp compilationLevel="advanced" warning="verbose" 
            debug="false" output="public/js-min/launch-all-min.js">

      <externs dir="${basedir}/src/js">
        <file name="__extern.js"/>
      </externs>

      <sources dir="${basedir}/src/js">
        <file name="__common.js"/>
        <file name="__form.js"/>
        <file name="__launch.js"/>
      </sources>

      <!--<sources dir="${basedir}/other">
        <file name="simple3.js"/>
      </sources>-->

    </jscomp>

    <jscomp compilationLevel="advanced" warning="verbose" 
            debug="false" output="public/js-min/front-all-min.js">

      <externs dir="${basedir}/src/js">
        <file name="__extern.js"/>
      </externs>

      <sources dir="${basedir}/src/js">
        <file name="__common.js"/>
      </sources>

    </jscomp>

    <jscomp compilationLevel="advanced" warning="verbose" 
            debug="false" output="public/js-min/survey-all-min.js">

      <externs dir="${basedir}/src/js">
        <file name="__extern.js"/>
      </externs>

      <sources dir="${basedir}/src/js">
        <file name="__common.js"/>
        <file name="__storage.js"/>
        <file name="__form.js"/>
        <file name="__survey.js"/>
      </sources>

    </jscomp>
    
  </target>

 <!-- <jsdoctoolkit jsdochome="/path/to/jsdoc_toolkit-1.4.0/" template="sunny" outputdir="/output/dir/">
    <source file="/a/js/soucefile.js" />
    <source file="/another/js/soucefile.js" />
  </jsdoctoolkit>-->

</project>